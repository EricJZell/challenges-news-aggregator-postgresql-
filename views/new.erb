<%if repeat%>
  <h1 style="color: red; border: 1px solid red; display: block;">This article has already been posted</h1>
  <script>
  alert("This is a repeat");
  </script>
<% end %>
<fieldset name="article">
  <legend>New Article:</legend>
  <form action="/articles/new" method="post">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value="<%=title%>" required>
    <label for="url">URL:</label>
    <input type="url" id="url" name="url" value="<%=url%>" required>
    <label for="description">Desciption:</label>
    <textarea type="text" id="description" name="description" required minlength="10">
      <%=description%>
    </textarea>
    <input type="submit">
  </form>
</fieldset>
